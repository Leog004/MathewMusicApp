header#header.page-topbar
        .navbar.navbar-fixed
          nav.navbar-main.navbar-color.nav-collapsible.sideNav-lock.navbar-dark.gradient-45deg-indigo-purple.no-shadow
            .nav-wrapper
              .header-search-wrapper.hide-on-med-and-down
                i.material-icons search
                input.header-search-input.z-depth-2(type='text', name='Search', placeholder='Explore', data-search='template-list')
                ul.search-list.collection.display-none
              ul.navbar-list.right
                li.dropdown-language
                  a.waves-effect.waves-block.waves-light.translation-button(href='#', data-target='translation-dropdown')
                    span.flag-icon.flag-icon-gb
                li.hide-on-med-and-down
                  a.waves-effect.waves-block.waves-light.toggle-fullscreen(href='javascript:void(0);')
                    i.material-icons settings_overscan
                li.hide-on-large-only.search-input-wrapper
                  a.waves-effect.waves-block.waves-light.search-button(href='javascript:void(0);')
                    i.material-icons search
                li
                  a.waves-effect.waves-block.waves-light.notification-button(href='javascript:void(0);', data-target='notifications-dropdown')
                    i.material-icons
                      | notifications_none
                      small.notification-badge 5
                li
                  a.waves-effect.waves-block.waves-light.profile-button(href='javascript:void(0);', data-target='profile-dropdown')
                    span.avatar-status.avatar-online
                      img(src='https://www.mathewmacielmusic.com/img/header/logo.png', alt='avatar')
                      i
              // translation-button
              ul#translation-dropdown.dropdown-content
                li.dropdown-item
                  a.grey-text.text-darken-1(href='#!', data-language='en')
                    i.flag-icon.flag-icon-gb
                    |  English
                li.dropdown-item
                  a.grey-text.text-darken-1(href='#!', data-language='fr')
                    i.flag-icon.flag-icon-fr
                    |  French
                li.dropdown-item
                  a.grey-text.text-darken-1(href='#!', data-language='pt')
                    i.flag-icon.flag-icon-pt
                    |  Portuguese
                li.dropdown-item
                  a.grey-text.text-darken-1(href='#!', data-language='de')
                    i.flag-icon.flag-icon-de
                    |  German
              // notifications-dropdown
              ul#notifications-dropdown.dropdown-content
                li
                  h6
                    | NOTIFICATIONS
                    span.new.badge 5
                li.divider
                li
                  a.black-text(href='#!')
                    span.material-icons.icon-bg-circle.cyan.small add_shopping_cart
                    |  A new order has been placed!
                  time.media-meta.grey-text.darken-2(datetime='2015-06-12T20:50:48+08:00') 2 hours ago
                li
                  a.black-text(href='#!')
                    span.material-icons.icon-bg-circle.red.small stars
                    |  Completed the task
                  time.media-meta.grey-text.darken-2(datetime='2015-06-12T20:50:48+08:00') 3 days ago
                li
                  a.black-text(href='#!')
                    span.material-icons.icon-bg-circle.teal.small settings
                    |  Settings updated
                  time.media-meta.grey-text.darken-2(datetime='2015-06-12T20:50:48+08:00') 4 days ago
                li
                  a.black-text(href='#!')
                    span.material-icons.icon-bg-circle.deep-orange.small today
                    |  Director meeting started
                  time.media-meta.grey-text.darken-2(datetime='2015-06-12T20:50:48+08:00') 6 days ago
                li
                  a.black-text(href='#!')
                    span.material-icons.icon-bg-circle.amber.small trending_up
                    |  Generate monthly report
                  time.media-meta.grey-text.darken-2(datetime='2015-06-12T20:50:48+08:00') 1 week ago
              // profile-dropdown
              ul#profile-dropdown.dropdown-content
                li
                  a.grey-text.text-darken-1(href='user-login.html')
                    i.material-icons keyboard_tab
                    |  Logout
            nav.display-none.search-sm
              .nav-wrapper
                form#navbarForm
                  .input-field.search-input-sm
                    input#search.search-box-sm.mb-0(type='search', required='', placeholder='Explore', data-search='template-list')
                    label.label-icon(for='search')
                      i.material-icons.search-sm-icon search
                    i.material-icons.search-sm-close close
                    ul.search-list.collection.search-list-sm.display-none