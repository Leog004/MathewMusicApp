extends base

block append head
 style#castilo-inline-style.
    .featured-content {
        background-image: url(/img/header/6.png);
    }

block content
 header#featured.featured-content.fade-background-50.padding-top-bottom
  .container
    .row.align-items-center
      .col-12.col-md
        h1.entry-title Videos
      .col-12.col-md-auto
        p.big.opacity-80 You can view more of my videos on YouTube

 main#content.padding-top-bottom
  .container
    .row
      .col-12
        .episodes-listing
          h3.add-separator
            span
              | All 
              em Videos
            article.entry.entry-episode
              .row.align-items-lg-center
                each entry in videos[0]?.youtubeVideoUrl
                  .col-12.col-md-6.col-xl-6   
                    iframe(src=entry.replace('/watchv', '/embed/') width='500' height='300' frameborder='0' allow='accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture' allowfullscreen='')

