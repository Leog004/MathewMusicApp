.container-fluid
  .row.no-gutter
    .d-none.d-md-flex.col-md-4.col-lg-6.bg-image
        img(src='http://lgnetworkdesign.com/img/whitelgnd.png' style='width:50px; position:absolute; top:30px; left:30px;')
